{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "HaPyLi",
  "scopeName": "source.hapyli",
  "patterns": [
    {
      "name": "constant.numeric.integer.hapyli",
      "match": "-?(:?[0-9]+|0[xX][0-9a-fA-F]+)"
    },
    {
      "name": "string.quoted.single.hapyli",
      "match": "'(\\\\[strn0'\\\\]|[^\r\n'\\\\])*'"
    },
    {
      "name": "string.quoted.double.hapyli",
      "match": "\"(\\\\[strn0\"\\\\]|[^\r\n\"\\\\])*\""
    },
    {
      "name": "comment.line.semi.hapyli",
      "match": ";[^\n]*"
    },
    {
      "name": "punctuation.paren.hapyli",
      "match": "[()]"
    },
    {
      "name": "keyword.control.import.hapyli",
      "match": "\\bimport\\b"
    },
    {
      "name": "storage.type.hapyli",
      "match": "\\bvar\\b"
    },
    {
      "name": "storage.type.asm.hapyli",
      "match": "\\basm\\b"
    },
    {
      "name": "storage.type.function.hapyli",
      "match": "\\bdef\\b"
    },
    {
      "name": "storage.modifier.hapyli",
      "match": "\\binline\\b"
    },
    {
      "name": "storage.type.hapyli",
      "match": "\\blet\\b"
    },
    {
      "name": "storage.type.hapyli",
      "match": "\\bin\\b"
    },
    {
      "name": "keyword.control.if.hapyli",
      "match": "\\bif\\b"
    },
    {
      "name": "keyword.control.do.hapyli",
      "match": "\\bdo\\b"
    },
    {
      "name": "variable.other.hapyli",
      "match": "[0-9a-zA-Z~!@#$%^&*\\-_=+|:,<.>/?]+"
    }
  ],
  "fileTypes": ["hpl"]
}
